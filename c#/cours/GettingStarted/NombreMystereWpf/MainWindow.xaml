        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="12">
        <StackPanel>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="J'ai choisi un chiffre entre 1 et 20, trouve le:"/>
